<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main app theme style -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/whiteBackgroundColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Search Rental Car Layout Style -->
    <style name="LinearLayoutSearchRentalCar">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Search Rental Car TextView style -->
    <style name="TextViewSearchRentalCar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Search Rental Car Item divider -->
    <style name="RentalItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DBD9D8</item>
    </style>
</resources>